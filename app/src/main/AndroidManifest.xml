<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.net.serbis.slideshow">

    <uses-feature android:name="android.software.live_wallpaper"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS"/>
    <uses-permission android:name="ru.net.serbis.mega.BIND_FILES_SERVICE"/>

    <application android:name=".App"
                 android:icon="@drawable/app"
                 android:label="@string/app_name">

        <service android:name=".service.ImageService"
                 android:enabled="true"
                 android:icon="@drawable/app"
                 android:label="@string/app_name"
                 android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data android:name="android.service.wallpaper"
                       android:resource="@xml/wallpaper"/>
        </service>

        <receiver android:name=".impl.Widget1"
                  android:label="@string/widget_name_1"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget1buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget2"
                  android:label="@string/widget_name_2"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget2buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget3"
                  android:label="@string/widget_name_3"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget3buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget4"
                  android:label="@string/widget_name_4"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget4buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget5"
                  android:label="@string/widget_name_5"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget5buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget6"
                  android:label="@string/widget_name_6"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget6buttons">
            </meta-data>
        </receiver>

        <receiver android:name=".impl.Widget7"
                  android:label="@string/widget_name_7"
                  android:icon="@drawable/app">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget7buttons">
            </meta-data>
        </receiver>

        <activity
            android:name=".activity.Config"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.Settings"
            android:label="@string/app_name"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.ActionsService"/>

        <activity
            android:name=".activity.Folders"
            android:label="@string/wall_folders"
            android:resizeableActivity="true">
        </activity>

        <activity
            android:name=".activity.Parameters"
            android:label="@string/parameters"
            android:resizeableActivity="true">
        </activity>

        <activity
            android:name=".activity.Information"
            android:label="@string/information"
            android:resizeableActivity="true">
        </activity>

    </application>
</manifest>
